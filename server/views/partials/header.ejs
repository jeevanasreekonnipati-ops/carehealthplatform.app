<header class="gradient">
    <a href="/" class="logo-container">
        <svg class="logo" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <circle cx="100" cy="100" r="95" fill="#ffffff" stroke="#2575fc" stroke-width="3" />
            <!-- Simple Logo Path -->
            <path d="M 85 50 H 115 V 150 H 85 Z M 50 85 H 150 V 115 H 50 Z" fill="#2575fc" />
        </svg>
        <span class="brand-text">Smart Health</span>
    </a>
    <nav style="display: flex; gap: 20px; align-items: center;">
        <a href="/" data-i18n="nav.home">Home</a>
        <a href="/doctors" data-i18n="nav.doctors">Doctors</a>
        <a href="/pharmacy" data-i18n="nav.pharmacy">Pharmacy</a>
        <% if (user) { %>
            <a href="/dashboard" data-i18n="nav.dashboard">Dashboard</a>
            <form action="/logout" method="GET" style="display:inline; margin: 0;">
                <button class="linklike" data-i18n="nav.logout">Logout</button>
            </form>
            <% } else { %>
                <a href="/login" data-i18n="nav.login">Login</a>
                <% } %>
    </nav>
</header>
<%- include('ai_assistant') %><%- include('settings_side') %>

        <script>
            // Highlight active nav link
            document.addEventListener('DOMContentLoaded', () => {
                const currentPath = window.location.pathname;
                const navLinks = document.querySelectorAll('nav a');
                navLinks.forEach(link => {
                    if (link.getAttribute('href') === currentPath) {
                        link.classList.add('active');
                    }
                });
            });
        </script>