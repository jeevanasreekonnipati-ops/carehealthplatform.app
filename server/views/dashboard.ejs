<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Smart Health Connect</title>
  <link rel="stylesheet" href="/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;600;800&family=Inter:wght@400;600&display=swap"
    rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    :root {
      --dashboard-bg: #0b0f1a;
      --stat-card-bg: rgba(30, 41, 59, 0.4);
    }

    body {
      font-family: 'Inter', sans-serif;
      background: var(--dashboard-bg);
      color: #f8fafc;
    }

    h2,
    h3,
    h4 {
      font-family: 'Outfit', sans-serif;
      letter-spacing: -0.5px;
    }

    .dashboard-container {
      padding: 40px 5%;
      max-width: 1400px;
      margin: 0 auto;
    }

    .welcome-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
    }

    .welcome-text h2 {
      font-size: 2.5rem;
      margin: 0;
      background: linear-gradient(to right, #fff, #94a3b8);
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 25px;
      margin-bottom: 40px;
    }

    .stat-card {
      background: var(--stat-card-bg);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.05);
      padding: 25px;
      border-radius: 24px;
      transition: transform 0.3s ease, border-color 0.3s ease;
    }

    .stat-card:hover {
      transform: translateY(-5px);
      border-color: var(--primary);
    }

    .stat-icon {
      width: 50px;
      height: 50px;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      margin-bottom: 15px;
    }

    .stat-value {
      font-size: 1.8rem;
      font-weight: 800;
      margin: 5px 0;
      font-family: 'Outfit';
    }

    .stat-label {
      color: #94a3b8;
      font-size: 0.9rem;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .main-layout {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 30px;
    }

    .panel-card {
      background: rgba(15, 23, 42, 0.6);
      border: 1px solid rgba(255, 255, 255, 0.05);
      border-radius: 32px;
      padding: 30px;
      overflow: hidden;
    }

    .panel-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 25px;
    }

    /* Chart Controls */
    .chart-tabs {
      display: flex;
      gap: 10px;
      background: rgba(0, 0, 0, 0.2);
      padding: 5px;
      border-radius: 12px;
    }

    .chart-tab {
      padding: 8px 16px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 0.85rem;
      font-weight: 600;
      transition: all 0.2s;
      border: none;
      background: transparent;
      color: #94a3b8;
    }

    .chart-tab.active {
      background: var(--primary);
      color: white;
    }

    /* Lists Styling */
    .data-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .data-item {
      padding: 16px;
      border-radius: 16px;
      margin-bottom: 12px;
      background: rgba(255, 255, 255, 0.02);
      border: 1px solid rgba(255, 255, 255, 0.03);
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: background 0.2s;
    }

    .data-item:hover {
      background: rgba(255, 255, 255, 0.05);
    }

    .item-main {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .item-icon {
      width: 44px;
      height: 44px;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
    }

    .item-info h4 {
      margin: 0;
      font-size: 1rem;
    }

    .item-info p {
      margin: 2px 0 0;
      font-size: 0.85rem;
      color: #64748b;
    }

    .status-badge {
      padding: 4px 12px;
      border-radius: 20px;
      font-size: 0.75rem;
      font-weight: 700;
      text-transform: uppercase;
    }

    @media (max-width: 1024px) {
      .main-layout {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/header', { user: user }) %>

    <div class="dashboard-container">
      <div class="welcome-section">
        <div class="welcome-text">
          <h2>Hello, <%= user.name %>
          </h2>
          <p style="color: #94a3b8; margin-top: 5px;">Welcome back to your health overview.</p>
        </div>
        <div class="actions">
          <button class="btn accent" onclick="openVitalModal()">Record Vitals +</button>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon" style="background: rgba(14, 165, 233, 0.1); color: #0ea5e9;">üìÖ</div>
          <div class="stat-value" id="stat-appointments">0</div>
          <div class="stat-label">Upcoming Visits</div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background: rgba(244, 63, 94, 0.1); color: #f43f5e;">‚ù§Ô∏è</div>
          <div class="stat-value" id="stat-heart">-</div>
          <div class="stat-label">Resting Heart Rate</div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background: rgba(34, 197, 94, 0.1); color: #22c55e;">üì¶</div>
          <div class="stat-value" id="stat-orders">0</div>
          <div class="stat-label">Recent Orders</div>
        </div>
        <div class="stat-card">
          <div class="stat-icon" style="background: rgba(168, 85, 247, 0.1); color: #a855f7;">üè•</div>
          <div class="stat-value">Good</div>
          <div class="stat-label">General Health</div>
        </div>
      </div>

      <div class="main-layout">
        <!-- Health Analytics -->
        <div class="panel-card">
          <div class="panel-header">
            <h3>Health Metrics</h3>
            <div class="chart-tabs">
              <button class="chart-tab active" onclick="switchChart('heart_rate', this)">Heart Rate</button>
              <button class="chart-tab" onclick="switchChart('bp_systolic', this)">Blood Pressure</button>
              <button class="chart-tab" onclick="switchChart('glucose', this)">Glucose</button>
            </div>
          </div>
          <div style="height: 350px; position: relative;">
            <canvas id="healthChart"></canvas>
          </div>
        </div>

        <!-- Appointments & Activity -->
        <div style="display: flex; flex-direction: column; gap: 30px;">
          <div class="panel-card">
            <div class="panel-header">
              <h3>Appointments</h3>
              <a href="/doctors"
                style="color: var(--primary); font-size: 0.85rem; text-decoration: none; font-weight: 600;">View All</a>
            </div>
            <ul class="data-list" id="appointments-list">
              <!-- Filled by JS -->
            </ul>
          </div>

          <div class="panel-card">
            <div class="panel-header">
              <h3>Quick Actions</h3>
            </div>
            <div style="display: grid; gap: 12px;">
              <button class="btn alt"
                style="justify-content: flex-start; text-align: left; background: rgba(255,255,255,0.03);"
                onclick="window.location='/pharmacy'">üõí Order Medicines</button>
              <button class="btn alt"
                style="justify-content: flex-start; text-align: left; background: rgba(255,255,255,0.03);"
                onclick="window.location='/doctors'">ü©∫ Find a Doctor</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Modals -->
    <div id="vitalModal" class="modal">
      <div class="modal-content" style="background: #1e293b; color: white;">
        <button class="close-btn" onclick="document.getElementById('vitalModal').classList.remove('show')">√ó</button>
        <h3 style="color: white; margin-bottom: 25px;">Track Reading</h3>
        <form id="addVitalForm" onsubmit="handleAddVital(event)">
          <div class="form-group">
            <label style="color: #94a3b8;">Metric Type</label>
            <select name="type" required
              style="background: #0f172a; border-color: rgba(255,255,255,0.1); color: white;">
              <option value="heart_rate">Heart Rate (bpm)</option>
              <option value="bp_systolic">Blood Pressure Systolic (mmHg)</option>
              <option value="glucose">Glucose (mg/dL)</option>
              <option value="weight">Weight (kg)</option>
            </select>
          </div>
          <div class="form-group">
            <label style="color: #94a3b8;">Value</label>
            <input type="number" name="value" step="0.1" required
              style="background: #0f172a; border-color: rgba(255,255,255,0.1); color: white;">
          </div>
          <button class="btn" type="submit" style="width: 100%; margin-top: 10px;">Save Data</button>
        </form>
      </div>
    </div>

    <script>
      let healthChart = null;
      let allVitals = [];

      document.addEventListener('DOMContentLoaded', async () => {
        await fetchDashboardData();
      });

      async function fetchDashboardData() {
        try {
          // Fetch Appointments
          const apptsRes = await fetch('/api/appointments/my');
          const appts = await apptsRes.json();
          renderAppointments(appts);
          document.getElementById('stat-appointments').textContent = appts.filter(a => a.status !== 'cancelled').length;

          // Fetch Vitals
          const vitalsRes = await fetch('/api/vitals');
          allVitals = await vitalsRes.json();
          renderVitalsChart('heart_rate');
          updateVitalStats();

          // Fetch Orders
          const ordersRes = await fetch('/api/orders/my');
          const orders = await ordersRes.json();
          document.getElementById('stat-orders').textContent = orders.length;

        } catch (err) {
          console.error('Failed to load dashboard data:', err);
        }
      }

      function renderAppointments(appts) {
        const list = document.getElementById('appointments-list');
        list.innerHTML = '';

        if (appts.length === 0) {
          list.innerHTML = '<li style="text-align: center; color: #64748b; padding: 20px;">No appointments found.</li>';
          return;
        }

        appts.slice(0, 3).forEach(app => {
          const date = new Date(app.date).toLocaleDateString(undefined, { month: 'short', day: 'numeric' });
          const li = document.createElement('li');
          li.className = 'data-item';
          li.innerHTML = `
                    <div class="item-main">
                        <div class="item-icon">ü©∫</div>
                        <div class="item-info">
                            <h4>${app.doctor ? app.doctor.name : 'Doctor Visit'}</h4>
                            <p>${date} ‚Ä¢ ${app.time || '10:00 AM'}</p>
                        </div>
                    </div>
                    <span class="status-badge" style="background: rgba(34, 197, 94, 0.1); color: #22c55e;">${app.status}</span>
                `;
          list.appendChild(li);
        });
      }

      function updateVitalStats() {
        const hr = allVitals.filter(v => v.type === 'heart_rate');
        if (hr.length > 0) {
          const latest = hr[hr.length - 1].value;
          document.getElementById('stat-heart').textContent = `${Math.round(latest)} bpm`;
        }
      }

      function renderVitalsChart(type) {
        const filtered = allVitals
          .filter(v => v.type === type)
          .sort((a, b) => new Date(a.recordedAt) - new Date(b.recordedAt));

        const labels = filtered.map(v => new Date(v.recordedAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric' }));
        const data = filtered.map(v => v.value);

        const ctx = document.getElementById('healthChart').getContext('2d');

        if (healthChart) healthChart.destroy();

        const gradient = ctx.createLinearGradient(0, 0, 0, 400);
        gradient.addColorStop(0, 'rgba(14, 165, 233, 0.2)');
        gradient.addColorStop(1, 'rgba(14, 165, 233, 0)');

        healthChart = new Chart(ctx, {
          type: 'line',
          data: {
            labels: labels,
            datasets: [{
              label: type.replace('_', ' ').toUpperCase(),
              data: data,
              borderColor: '#0ea5e9',
              borderWidth: 3,
              pointRadius: 5,
              pointBackgroundColor: '#fff',
              backgroundColor: gradient,
              fill: true,
              tension: 0.4
            }]
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
              legend: { display: false }
            },
            scales: {
              y: {
                grid: { color: 'rgba(255,255,255,0.05)' },
                ticks: { color: '#64748b' }
              },
              x: {
                grid: { display: false },
                ticks: { color: '#64748b' }
              }
            }
          }
        });
      }

      function switchChart(type, btn) {
        document.querySelectorAll('.chart-tab').forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        renderVitalsChart(type);
      }

      function openVitalModal() {
        document.getElementById('vitalModal').classList.add('show');
      }

      async function handleAddVital(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);

        try {
          const res = await fetch('/api/vitals', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          if (res.ok) {
            location.reload();
          } else {
            alert('Failed to save reading.');
          }
        } catch (err) {
          alert('An error occurred.');
        }
      }
    </script>
</body>

</html>